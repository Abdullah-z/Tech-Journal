<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include partials/header %>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>



    <section class="text-gray-400 bg-gray-900 body-font">

    <div class="container px-5 py-24 mx-auto">


      <div class="flex flex-wrap -m-4">
  <% posts.forEach(function(post){ %>

        <div class="p-4 lg:w-1/3 md:w-1/1 sm:w-3/3 ">
          <div class="h-full border-2 border-gray-800 rounded-lg overflow-hidden">
            <img class="lg:h-48 md:h-36 w-full object-cover object-center" src= <%= post.image %> alt="blog">
            <div class="p-6">
              <h1 class="title-font sm:text-2xl text-xl font-medium text-white mb-3"><%= post.title %></h1>
              <p class="leading-relaxed mb-3"><%=post.content.substring(0,150) + "..." %></p>
              <div class="flex items-center flex-wrap ">
                <a class="text-blue-400 inline-flex items-center" href="/posts/<%=post._id%>">Read More
                  <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14"></path>
                    <path d="M12 5l7 7-7 7"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>


  <% }); %>
      </div>

    </div>

  </section>






    <% include partials/footer %>
  </body>
</html>
